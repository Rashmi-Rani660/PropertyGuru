<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shortlistFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".ShortlistFragment">

    <!-- Radio buttons for filter -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rbProperties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Properties"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbProjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Projects" />

        <RadioButton
            android:id="@+id/rbLocalities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localities" />
    </RadioGroup>

    <!-- RecyclerView to show shortlisted items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewShortlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        tools:listitem="@layout/item_shortlist" />

    <!-- Empty State Layout -->
    <LinearLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/not_shortlisted" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You haven’t Shortlisted any properties yet!"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap on the heart icon on property / project / locality you like to see them here…"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textAlignment="center" />
    </LinearLayout>
</LinearLayout>
