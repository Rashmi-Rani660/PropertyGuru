<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:id="@+id/textLeadName"
            android:text="Rahul Kr"
            android:textSize="20sp"
            android:textColor="#0078D4"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textContact"
            android:text="+91-7973419869 | rahulbharath202@gmail.com"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp"/>

        <!-- Lead Score & Source -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lead Score"
                    android:textSize="12sp"
                    android:textColor="#888888"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textScore"
                    android:text="2.0 ★★☆☆☆"
                    android:textSize="16sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Source"
                    android:textSize="12sp"
                    android:textColor="#888888"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textSource"
                    android:text="C2V"
                    android:textSize="16sp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Card 1: Interest Info -->
        <LinearLayout
            android:orientation="vertical"
            android:background="#F9F9F9"
            android:elevation="2dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Also interested in:"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textAlsoInterested"
                android:text="N.A."
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Focussed On:"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textFocus"
                android:text="2BHK, Rs. 50 Lacs to 60 Lacs, Sector 49 Noida"
                android:textSize="14sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Card 2: Activity Details -->
        <LinearLayout
            android:orientation="vertical"
            android:background="#F9F9F9"
            android:elevation="2dp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACTIVITY DETAILS"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="in last 6 months"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Interest sent:"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textInterestSent"
                android:text="NA"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Views:"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViews"
                android:text="3202"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Planning to Buy within:"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textBuyWithin"
                android:text="NA"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interested in Site Visit?"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textSiteVisit"
                android:text="NA"
                android:textSize="14sp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
