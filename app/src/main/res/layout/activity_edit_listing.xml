<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".EditListingActivity"
    android:weightSum="1">

    <!-- Top Title and Back -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Guru"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4C1F7A"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- Section Title and Sort -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Active Listings"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/sortByText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort By"
            android:textColor="#1A73E8"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Search Box -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:hint="Search listings"
        android:paddingHorizontal="12dp"
        android:background="@drawable/bg_search_box"
        android:textColorHint="#999999"
        android:textColor="#000000"/>

    <!-- Filters Row -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingEnd="8dp"
            android:paddingStart="8dp">

            <Button
                android:id="@+id/btnBHK"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="BHK"
                android:textSize="13sp"
                android:textColor="#000000"
                android:backgroundTint="#F5F5F5"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnPropertyType"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Property Type"
                android:textSize="13sp"
                android:textColor="#000000"
                android:backgroundTint="#F5F5F5"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnListingType"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Listing Type"
                android:textSize="13sp"
                android:textColor="#000000"
                android:backgroundTint="#F5F5F5" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Main content section -->
    <LinearLayout
        android:id="@+id/mainContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/no_result"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No results found!"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To get relevant results, try changing filters &amp; search"
            android:textSize="13sp"
            android:textColor="#666666"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnYourListings"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="View your Listings"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/bg_outline_button" />
    </LinearLayout>

    <!-- This MUST BE outside mainContentLayout -->
    <FrameLayout
        android:id="@+id/listingFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />
</LinearLayout>
