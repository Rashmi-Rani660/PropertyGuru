<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A01A7">

    <!-- Purple Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#5A01A7">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:tint="#FFFFFF"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true" />


        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-18dp"
            android:src="@drawable/arrow_up"
            android:contentDescription="Up" />
    </RelativeLayout>

    <!-- White Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_top"
        android:padding="20dp"
        android:elevation="8dp">

        <!-- Reusable Feature Row Template -->
        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/step1"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advertise Properties"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post as many properties as you want at no cost"
                    android:textColor="#777777"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/step2"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sell Faster"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your property is visible to 80 L+ buyers/tenants"
                    android:textColor="#777777"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/step3"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respond Real Time"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get real time alerts of buyers/tenants for all your properties."
                    android:textColor="#777777"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_truecaller"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_blue_outline"
            android:text="One Tap Login with Truecaller"
            android:textColor="#0078FF"
            android:textStyle="bold"
            android:textSize="10sp"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="8dp"
            android:layout_marginBottom="16dp" />


        <!-- OR Divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#CCCCCC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_marginHorizontal="12dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#CCCCCC" />
        </LinearLayout>

        <!-- Manual Verify Button -->
        <Button
            android:id="@+id/btn_verify_manual"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_green_outline"
            android:text="Verify Number Manually"
            android:textColor="#00C853"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_marginTop="8dp" />



    </LinearLayout>

</FrameLayout>
