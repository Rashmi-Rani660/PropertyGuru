<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="4dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Locality Image/Icon -->
        <ImageView
            android:id="@+id/localityImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/house4"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_circle_gray"
            android:padding="6dp" />

        <!-- Locality Text Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/localityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sector 150"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/localityRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹12.5K/sq.ft."
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/localitySearchCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7K searches"
                android:background="@drawable/bg_gray_chip"
                android:textColor="#444444"
                android:textSize="12sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
