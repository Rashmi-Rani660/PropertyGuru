<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="2dp"
    android:radius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal">

        <!-- Left Image with Label -->
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deleted"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:background="@drawable/bg_deleted_label"
                android:padding="2dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <!-- Right Property Info -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp">

            <!-- Property Code -->
            <TextView
                android:text="Property 01: CB3160988"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Description -->
            <TextView
                android:text="2 BHK Flat/Apartment for Sale\nin Yamaha Vihar, Sector 49 Noida"
                android:textColor="#555555"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Posting Completion Text -->
            <TextView
                android:text="Posting Completion: 65%"
                android:textColor="#F9A825"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Progress Bar -->
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:progress="65"
                android:progressTint="#F9A825"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp" />

            <!-- Price + Button Row -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="â‚¹ 50 Lac"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/manageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Manage Property"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/bg_outline_button" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
