<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/propertyDetailsCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- White Scrollable Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/card_bg_rounded"
            android:backgroundTint="@android:color/white"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Property Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="Property Type"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include layout="@layout/item_property_type" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Society -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Building/ Project/ Society (Optional)"
                android:padding="8dp"
                android:textSize="14sp" />

            <!-- Locality -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Enter Locality"
                android:padding="8dp"
                android:textSize="14sp" />

            <!-- BHK -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:text="BHK"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include layout="@layout/item_bhk_options" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Room Details Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Add Room Details"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Bedrooms -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="No. of Bedrooms"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/layoutBedrooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:id="@+id/bed1" style="@style/RoomChip" android:text="1" />
                    <TextView android:id="@+id/bed2" style="@style/RoomChip" android:text="2" />
                    <TextView android:id="@+id/bed3" style="@style/RoomChip" android:text="3" />
                    <TextView android:id="@+id/bed4" style="@style/RoomChip" android:text="4" />
                    <TextView android:id="@+id/bed5" style="@style/RoomChip" android:text="5+" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Bathrooms -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="No. of Bathrooms"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/layoutBathrooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:id="@+id/bath1" style="@style/RoomChip" android:text="1" />
                    <TextView android:id="@+id/bath2" style="@style/RoomChip" android:text="2" />
                    <TextView android:id="@+id/bath3" style="@style/RoomChip" android:text="3" />
                    <TextView android:id="@+id/bath4" style="@style/RoomChip" android:text="4" />
                    <TextView android:id="@+id/bath5" style="@style/RoomChip" android:text="4+" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Balconies -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:text="Balconies"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/layoutBalconies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView android:id="@+id/bal1" style="@style/RoomChip" android:text="0" />
                    <TextView android:id="@+id/bal2" style="@style/RoomChip" android:text="1" />
                    <TextView android:id="@+id/bal3" style="@style/RoomChip" android:text="2" />
                    <TextView android:id="@+id/bal4" style="@style/RoomChip" android:text="3" />
                    <TextView android:id="@+id/bal5" style="@style/RoomChip" android:text="3+" />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/layoutRooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rooms"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRoom1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SelectableRoomButton"
                    android:text="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRoom2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SelectableRoomButton"
                    android:text="2" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRoom3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SelectableRoomButton"
                    android:text="3" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRoom4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SelectableRoomButton"
                    android:text="4" />
            </LinearLayout>


            <!-- Built-Up Area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etBuiltUpArea"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Built Up Area"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#888888"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/unitSelector"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_edittext"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/tvUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="4dp"
                        android:text="sq. ft."
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/arrow_down"
                        app:tint="#888888" />
                </LinearLayout>
            </LinearLayout>

            <!-- Furnish Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:text="Furnish Type"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <include layout="@layout/item_furnish_options" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Checkbox -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkboxShareWithAgents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/purple_500"
                    android:text="Share listing information with agents"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Next Button -->
            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#21C07A"
                android:text="Next, Add Price Details"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>