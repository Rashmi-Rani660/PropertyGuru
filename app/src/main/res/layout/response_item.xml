<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="10dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Name and Date Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rahul Kr"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="June 21, 2025"
                android:textSize="12sp"
                android:textColor="#757575" />
        </LinearLayout>

        <!-- Lead Score and Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/tvLeadScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lead Score : 2.0 ★★☆☆☆"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#EAA64D" />

            <TextView
                android:id="@+id/tvUserType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Individual"
                android:textSize="13sp"
                android:textColor="#555555" />
        </LinearLayout>

        <!-- Details -->
        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs50 Lac, 2 Bed , Flat/Apartment for Sale in Yamaha Vihar, Sector 49 Noida"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <!-- Listing Type -->
        <TextView
            android:id="@+id/tvListingType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plain Listing\nDeleted"
            android:textSize="13sp"
            android:textColor="#757575"
            android:layout_marginTop="6dp" />

        <!-- Icons Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/share"
                android:layout_marginEnd="16dp"
                android:contentDescription="Share" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/call"
                android:contentDescription="Call" />
        </LinearLayout>

        <!-- View Lead Detail -->
        <TextView
            android:id="@+id/tvViewDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Lead Detail"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
