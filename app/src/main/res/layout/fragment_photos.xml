<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Congrats Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Photos/Videos"
            android:textSize="16sp"
            android:textColor="#00B160"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Upload from gallery -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="16dp"
            android:weightSum="2">

            <!-- Upload Photos -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload Photos"
                android:textColor="@android:color/white"
                android:icon="@drawable/ic_gallery"
                android:iconTint="@android:color/white"
                app:iconPadding="8dp"
                android:backgroundTint="#7B61FF"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="12dp"
                android:layout_marginEnd="8dp" />

            <!-- Upload Videos -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVideo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload Videos"
                android:textColor="@android:color/white"
                android:icon="@drawable/ic_video"
                android:iconTint="@android:color/white"
                app:iconPadding="8dp"
                android:backgroundTint="#7B61FF"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="12dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- OR divider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <!-- Click live photos -->
        <LinearLayout
            android:id="@+id/layoutCamera"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/card_dotted_border"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_camera"
                android:tint="#512DA8" />

            <Button
                android:id="@+id/btnCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click live photos"
                android:textColor="#FFFFFF"
                android:backgroundTint="#512DA8"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:backgroundTint="#00B160"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="12dp" />


        <!-- Grid RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="8dp"
            android:overScrollMode="never" />

        <!-- Add this just after recyclerMedia RecyclerView -->


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
