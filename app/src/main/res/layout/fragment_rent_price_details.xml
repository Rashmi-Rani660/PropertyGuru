<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_bg_rounded"
        android:elevation="4dp"
        android:padding="20dp"
        android:layout_marginBottom="24dp">

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Rent"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Monthly Rent Input -->
        <EditText
            android:id="@+id/etMonthlyRent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter Monthly Rent"
            android:background="@drawable/rounded_edittext"
            android:inputType="number"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="16dp" />

        <!-- Rent Estimate Info Box (optional content here) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">
            <!-- Optional: Add content like suggestions, average rent, etc. -->
        </LinearLayout>

        <!-- Available From Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvAvailableFrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Available From"
                android:textColor="#666666"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ivCalendar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar"
                android:tint="#888888" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Maintenance Charges -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maintenance Charges (Monthly)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/etMaintenanceAmount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Enter amount"
                android:background="@drawable/rounded_edittext"
                android:inputType="number"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textColorHint="#AAAAAA" />

            <TextView
                android:id="@+id/tvCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ /month"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Security Deposit Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Deposit"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnNone"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="None"
                    android:background="@drawable/bg_property_unselected"
                    android:textColor="@color/grayText"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn1Month"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="1 month"
                    android:background="@drawable/bg_property_unselected"
                    android:textColor="@color/grayText"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn2Month"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="2 month"
                    android:background="@drawable/bg_property_unselected"
                    android:textColor="@color/grayText"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCustom"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Custom"
                    android:background="@drawable/bg_property_unselected"
                    android:textColor="@color/grayText"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- CTA Button -->
        <Button
            android:id="@+id/btnPostProperty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Property"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#21C07A"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>
</ScrollView>
