<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- White Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@android:color/white">

            <TextView
                android:text="Amenities"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/layoutAmenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />


            <TextView
                android:id="@+id/tvAddMoreAmenities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+  Add more amenities"
                android:textColor="#0076FF"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="Water Source"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/layoutWaterSources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Overlooking Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overlooking"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/layoutOverlooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Other Features -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Features"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkboxGated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In a gated society"
            android:layout_marginBottom="4dp" />

        <CheckBox
            android:id="@+id/checkboxCorner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corner Property"
            android:layout_marginBottom="4dp" />

        <CheckBox
            android:id="@+id/checkboxPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Friendly"
            android:layout_marginBottom="4dp" />

        <CheckBox
            android:id="@+id/checkboxWheelchair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wheelchair friendly"
            android:layout_marginBottom="16dp" />

        <!-- Power Backup -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power Back up"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioPowerBackup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None" />

            <RadioButton
                android:id="@+id/radioPartial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partial"
                android:layout_marginStart="16dp" />

            <RadioButton
                android:id="@+id/radioFull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <!-- Property Facing Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property facing"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/layoutPropertyFacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Flooring Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of flooring"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerFlooringType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Width of Facing Road -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Width of facing road"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/editFacingRoadWidth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter the width"
                android:inputType="number" />

            <Spinner
                android:id="@+id/spinnerFacingRoadUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/unit_array"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Location Advantages -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Advantages"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/layoutLocationAdvantages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Please provide correct information, otherwise your listing might get blocked"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginBottom="16dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save and Continue"
            android:layout_marginTop="8dp"
            android:backgroundTint="#0076FF"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
