<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/landmarkChipsSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Popular Landmarks"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLandmarkAce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Ace City Square"
            android:textColor="#BB86FC"
            android:textSize="10sp"
            android:background="@drawable/bg_white_chip"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:drawableRight="@drawable/right_arrow"
            android:drawablePadding="6dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLandmarkMedanta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Medanta Hospital Site"
            android:textColor="#BB86FC"
            android:textSize="10sp"
            android:background="@drawable/bg_white_chip"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:drawableRight="@drawable/right_arrow"
            android:drawablePadding="6dp" />
    </LinearLayout>
</LinearLayout>
