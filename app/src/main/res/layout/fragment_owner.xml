<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_card_white"
    android:layout_margin="12dp"
    android:elevation="4dp"
    android:padding="16dp">


    <!-- Intro Text -->
    <LinearLayout
        android:id="@+id/ownerContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New to Property Guru? Let’s start"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Property Type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property type"
        android:textColor="#757575"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnResidential"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Residential"
            android:background="@drawable/bg_property_unselected"
            android:textColor="@color/grayText"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="16dp"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCommercial"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_property_unselected"
            android:paddingHorizontal="16dp"
            android:text="Commercial"
            android:textColor="@color/grayText"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSocietyShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:padding="4dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSocietyShop"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_outline"
            android:text="Society Shop"
            android:textAllCaps="false"
            android:textColor="@color/grayText"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:drawablePadding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:stateListAnimator="@null"
            android:backgroundTint="@null" />
    </LinearLayout>


    <!-- Looking to... -->
    <TextView
        android:id="@+id/tvYouAreLooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You’re looking to…"
        android:textColor="#757575"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRent"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Rent"
            android:background="@drawable/bg_property_unselected"
            android:textColor="@color/grayText"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="12dp"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSell"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Sell"
            android:background="@drawable/bg_property_unselected"
            android:textColor="@color/grayText"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="12dp"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Phone Number -->

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- Name -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Name"
        android:layout_marginTop="12dp"
        android:padding="12dp" />

    <!-- City -->
    <EditText
        android:id="@+id/etCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search City"
        android:drawableStart="@drawable/search"
        android:layout_marginTop="12dp"
        android:padding="12dp" />

    <!-- Next Button -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next, add address and price"
        android:enabled="false"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#DADADA"
        android:textColor="#FFFFFF"
        android:paddingVertical="12dp"
        android:textSize="14sp" />
</LinearLayout>

    </LinearLayout>
</ScrollView>