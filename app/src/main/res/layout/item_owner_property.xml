<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="8dp"
    android:background="@drawable/project_card_bg"
    android:elevation="4dp">

    <!-- Property Image -->
    <ImageView
        android:id="@+id/propertyImage"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/house1"
        android:background="@drawable/rounded_image_bg"
        android:clipToOutline="true" />

    <!-- Property Title -->
    <TextView
        android:id="@+id/propertyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner Property Title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="#212121" />

    <!-- Property Location -->
    <TextView
        android:id="@+id/propertyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner City / Locality"
        android:textSize="13sp"
        android:textColor="#757575"
        android:layout_marginTop="2dp"/>

    <!-- Property Price -->
    <TextView
        android:id="@+id/propertyPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹ Price"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#E64A19"
        android:layout_marginTop="4dp"/>
</LinearLayout>
