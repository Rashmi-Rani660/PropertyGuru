<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F8F8F8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvBuilderWelcome"
            android:text="Welcome, Builder!"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Projects Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="My Projects"
            android:textStyle="bold"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/builderProjectRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Promotions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promotion Tips"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Add site photos\n• Highlight amenities\n• Set attractive pricing"
            android:layout_marginTop="8dp" />

        <!-- Subscription -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan: Basic"
            android:layout_marginTop="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upgrade to Builder Pro"
            android:layout_marginTop="8dp"
            android:backgroundTint="#5F2D98"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
