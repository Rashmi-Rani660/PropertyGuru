<!-- locality_cards_section.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="12dp"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/cardSector73"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_locality_card">

        <TextView
            android:text="Sector 73"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="₹3.5K/sq.ft."
            android:textColor="#888888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="10K searches"
            android:textSize="12sp"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_chip" />
    </LinearLayout>

    <Space
        android:layout_width="8dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/cardSector150"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_locality_card">

        <TextView
            android:text="Sector 150"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="₹12K/sq.ft."
            android:textColor="#888888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="7K searches"
            android:textSize="12sp"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_chip" />
    </LinearLayout>
</LinearLayout>
