<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Horizontal RecyclerView for images -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerImages"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />

        <!-- Possession date & price -->
        <TextView
            android:id="@+id/possessionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Possession by Dec, 2027  •  Avg. Price/ sq.ft. ₹15.38k"
            android:textColor="#757575"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- Property Title -->
        <TextView
            android:id="@+id/propertyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunteck Beach Residences"
            android:textColor="#212121"
            android:textSize="15sp"
            android:layout_marginTop="6dp" />

        <!-- Location -->
        <TextView
            android:id="@+id/propertyLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vasai West, Vasai"
            android:textColor="#757575"
            android:textSize="13sp"
            android:layout_marginTop="2dp"/>

        <!-- Pricing options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/bhk2Price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2 BHK Apartment\n₹ 98.0 L"
                android:textColor="#000000"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp"/>

            <TextView
                android:id="@+id/bhk3Price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="3 BHK Apartment\n₹ 1.39 Cr"
                android:textColor="#000000"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="10dp"/>

        <!-- Builder & action row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Builder Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="18dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/builder_logo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/propertyBuilder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunteck Realty Limited"
                        android:textColor="#000000"
                        android:textSize="12.5sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Developer"
                        android:textColor="#757575"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- View Number Button -->
            <TextView
                android:id="@+id/viewNumberBtn"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/view_number_button_bg"
                android:text="View Number"
                android:textColor="#6200EE"
                android:gravity="center"
                android:paddingHorizontal="14dp"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"/>

            <!-- Call Button -->
            <ImageView
                android:id="@+id/callButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_call"
                android:background="@drawable/bg_circle"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
