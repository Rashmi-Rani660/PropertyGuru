<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Skip Login -->
    <TextView
        android:id="@+id/tv_skip_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip Login"
        android:textColor="#7965C1"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Heading -->
    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Login to Proceed"
        android:textColor="#dc3545"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_skip_login" />

    <!-- Features -->
    <TextView
        android:id="@+id/tv_feature1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✓ Explore verified listings"
        android:textColor="#7965C1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_heading"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_feature2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✓ Connect directly with property owners"
        android:textColor="#7965C1"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_feature1"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Phone Label -->
    <TextView
        android:id="@+id/tv_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_feature2"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Phone Input -->
    <LinearLayout
        android:id="@+id/ll_phone_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Country Code -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+91"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

        <!-- Phone Number Field -->
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter 10-digit phone number"
            android:inputType="phone"
            android:maxLength="10"
            android:digits="0123456789"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>
    </LinearLayout>

    <!-- OTP Button -->
    <Button
        android:id="@+id/btn_send_otp"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Send OTP"
        android:enabled="false"
        android:textStyle="bold"
        android:backgroundTint="#7965C1"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ll_phone_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Terms -->
    <TextView
        android:id="@+id/tv_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By continuing, you agree to our Terms and Conditions"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_send_otp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- OR Login -->
    <TextView
        android:id="@+id/tv_quick_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or login with"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tv_terms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Login with Email Button -->
    <Button
        android:id="@+id/btn_login_email"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/email_icon"
        android:text="Login with Email"
        android:textStyle="bold"
        android:backgroundTint="#7965C1"
        android:textColor="#FFFFFF"
        android:drawablePadding="8dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_quick_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Login with WhatsApp Button -->
    <Button
        android:id="@+id/btn_login_whatsapp"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_whatsapp"
        android:text="Login with WhatsApp"
        android:textStyle="bold"
        android:backgroundTint="#25D366"
        android:textColor="#FFFFFF"
        android:drawablePadding="8dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/btn_login_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Footer Note -->
    <TextView
        android:id="@+id/tv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google account must be available on your device"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_login_whatsapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ProgressBar (Centered) -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:indeterminate="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
