<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Images Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageMain"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corner"
                android:clipToOutline="true" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageMap"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corner"
                android:clipToOutline="true" />
        </LinearLayout>

        <!-- Info Text -->
        <TextView
            android:id="@+id/textPossession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Possession by Dec 2029  •  ₹29.13k / sq.ft"
            android:textSize="12sp"
            android:textColor="#888"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roswalt Raya"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="2dp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chembur, Mumbai"
            android:textSize="14sp"
            android:textColor="#555" />

        <TextView
            android:id="@+id/textConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 BHK Apartment"
            android:textSize="14sp"
            android:textColor="#555" />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹1.9 Cr - ₹2.4 Cr"
            android:textSize="15sp"
            android:textColor="#000"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/developerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tata Housing"
            android:textColor="#888"
            android:textSize="14sp"
            android:paddingBottom="4dp" />

        <Button
            android:id="@+id/viewNumberButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="View Number"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#BB86FC"
            android:textColor="#FFF"
            android:layout_marginTop="6dp"
            android:minWidth="120dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
