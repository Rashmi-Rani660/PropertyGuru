<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ListingsActivity">

    <!-- Search and Filter Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="Search locality or project"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:layout_margin="16dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- Tab Row -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Tab: All -->
            <LinearLayout
                android:id="@+id/tabAll"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:paddingVertical="6dp">

                <ImageView
                    android:id="@+id/iconAll"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/all"
                    android:tint="@color/tab_unselected"
                    android:contentDescription="All" />

                <TextView
                    android:id="@+id/textAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textSize="11sp"
                    android:textColor="@color/tab_unselected"
                    android:layout_marginTop="2dp" />

                <View
                    android:id="@+id/underlineAll"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/tab_selected"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Tab: Projects -->
            <LinearLayout
                android:id="@+id/tabProjects"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:paddingVertical="6dp">

                <ImageView
                    android:id="@+id/iconProjects"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/projects"
                    android:tint="@color/tab_unselected"
                    android:contentDescription="Projects" />

                <TextView
                    android:id="@+id/textProjects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Projects"
                    android:textSize="11sp"
                    android:textColor="@color/tab_unselected"
                    android:layout_marginTop="2dp" />

                <View
                    android:id="@+id/underlineProjects"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/tab_selected"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Tab: Housing Verified -->
            <LinearLayout
                android:id="@+id/tabVerified"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:paddingVertical="6dp">

                <ImageView
                    android:id="@+id/iconVerified"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/house"
                    android:tint="@color/tab_unselected"
                    android:contentDescription="Housing Verified" />

                <TextView
                    android:id="@+id/textVerified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property Guru Verified"
                    android:textSize="11sp"
                    android:textColor="@color/tab_unselected"
                    android:layout_marginTop="2dp" />

                <View
                    android:id="@+id/underlineVerified"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/tab_selected"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Tab: New Launches -->
            <LinearLayout
                android:id="@+id/tabLaunches"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:paddingVertical="6dp">

                <ImageView
                    android:id="@+id/iconLaunches"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/newlaunches"
                    android:tint="@color/tab_unselected"
                    android:contentDescription="New Launches" />

                <TextView
                    android:id="@+id/textLaunches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Launches"
                    android:textSize="11sp"
                    android:textColor="@color/tab_unselected"
                    android:layout_marginTop="2dp" />

                <View
                    android:id="@+id/underlineLaunches"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/tab_selected"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabReady"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:paddingVertical="6dp">

                <ImageView
                    android:id="@+id/iconReady"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ready"
                    android:tint="@color/tab_unselected"
                    android:contentDescription="Ready to Move" />

                <TextView
                    android:id="@+id/textReady"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to Move"
                    android:textSize="11sp"
                    android:textColor="@color/tab_unselected"
                    android:layout_marginTop="2dp" />

                <View
                    android:id="@+id/underlineReady"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/tab_selected"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Tab: Owner Properties -->
            <LinearLayout
                android:id="@+id/tabOwner"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:paddingVertical="6dp">

                <ImageView
                    android:id="@+id/iconOwner"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/owner"
                android:tint="@color/tab_unselected"
                android:contentDescription="Owner Properties" />

                <TextView
                    android:id="@+id/textOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner Properties"
                    android:textSize="11sp"
                    android:textColor="@color/tab_unselected"
                    android:layout_marginTop="2dp" />

                <View
                    android:id="@+id/underlineOwner"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/tab_selected"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Tab: Your Choice -->
            <LinearLayout
                android:id="@+id/tabChoice"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:paddingVertical="6dp">

                <ImageView
                    android:id="@+id/iconChoice"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/choice"
                android:tint="@color/tab_unselected"
                android:contentDescription="Your Choice" />

                <TextView
                    android:id="@+id/textChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Choice"
                    android:textSize="11sp"
                    android:textColor="@color/tab_unselected"
                    android:layout_marginTop="2dp" />

                <View
                    android:id="@+id/underlineChoice"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/tab_selected"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listingsRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false" />

    <!-- Bottom Navigation Row -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingHorizontal="12dp">

        <LinearLayout
            android:id="@+id/navTopLocalities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/top_localities"
                android:contentDescription="Top Localities" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Localities"
                android:textSize="11sp"
                android:textColor="@color/tab_unselected" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navSaved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/favourite"
                android:contentDescription="Saved" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved"
                android:textSize="11sp"
                android:textColor="@color/tab_unselected" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <!-- Container for dynamic profile icon -->
            <FrameLayout
                android:id="@+id/navProfileContainer"
                android:layout_width="24dp"
                android:layout_height="24dp">

                <!-- Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImageBottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <!-- First Letter Fallback -->
                <TextView
                    android:id="@+id/navProfileInitial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_circle_purple"
                    android:visibility="gone" />
            </FrameLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="11sp"
                android:textColor="@color/tab_unselected" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
