<resources>
    <style name="TabButtonStyle">
        <!-- Background: Use Material ripple effect for touch feedback -->
        <item name="android:background">?attr/selectableItemBackground</item>

        <!-- Text color changes based on light/dark theme -->
        <item name="android:textColor">?android:textColorPrimary</item>

        <!-- Font and padding -->
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:minHeight">40dp</item>


    </style>

    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="TabSelector">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_unselected_tab</item>
        <item name="android:textColor">#333333</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SelectorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_unselected_tab</item>
        <item name="android:textColor">#333333</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SelectableButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:backgroundTint">#F5F5F5</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="SelectableBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="RoomChip">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_room_chip_selector</item>
        <item name="android:textColor">#666666</item> <!-- Default gray -->
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <string-array name="unit_array">
        <item>Feet</item>
        <item>Meter</item>
        <item>Yards</item>
    </string-array>

    <style name="ButtonNeutralStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="SelectableRoomButton">
        <item name="android:background">@drawable/selectable_room_button</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>





</resources>
